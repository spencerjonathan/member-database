<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field
			name="tower_id"
			type="sql"
			label="Tower"
			description="The tower that you wish to contact"
			required="true"
			query="SELECT '' as value, 'Please Select' as tower_id union all SELECT t.id AS value, concat_ws(', ', place, designation) AS tower_id FROM #__md_tower t left join #__md_member m on t.correspondent_id = m.id where t.corresp_email is not null or m.email is not null" />
			
		<field
			name="reply_to_email"
			type="email"
			label="Your Email Address"
			description="Your email address"
			size="40"
			class="inputbox"
			validate="email"
			required="true"
		/>
		
        <field 
			name="reply_to_name" 
			type="text"
			label="Your Name"
			description="Your Name"
			class="inputbox"
			maxlength="50"
			size="40"
			required="true"
		/>
		
		<field 
			name="subject" 
			type="text"
			label="Subject"
			description="Subject"
			class="span8"
			maxlength="150"
			size="30"
			required="true"
		/>

		<field 
			name="message" 
			type="textarea"
			label="Message"
			description="Type your message here"
			class="span8 vert"
			cols="70"
			rows="10"
			required="true"
		/>
		<field
            name="captcha"
            type="captcha"
            label="Captcha"
            description="Captcha"
            validate="captcha"
            namespace="mail"
        />
	</fieldset>
</form>
