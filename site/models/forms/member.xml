<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addrulepath="components/com_memberdatabase/models/rules">
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="tower_id"
				type="number"
				class="required"
				label="Tower ID"
				validate="towerid"
				message="Please select a valid tower for the memeber"
				required="true"
				/>
		<field
				name="forenames"
				type="text"
				label="Forenames"
				description="The forename(s) of the member"
				size="50"
				class="inputbox required"
				required="true"
				default=""
				/>
		<field
				name="surname"
				type="text"
				label="Surname"
				description="The Surname of the member"
				size="50"
				class="inputbox required"
				required="true"
				default=""
				/>
		<field
				name="title"
				type="list"
				label="Title"
				description="The Title of the member"
				required="true"
				default="">
				<option value="">Please Select</option>
				<option value="Dr">Dr</option>
				<option value="Father">Father</option>
				<option value="Master">Master</option>
				<option value="Miss">Miss</option>
				<option value="Mr">Mr</option>
				<option value="Mrs">Mrs</option>
				<option value="Ms">Ms</option>
				<option value="Prof">Prof</option>
				<option value="Rev">Rev</option>
				<option value="Rev Canon Dr">Rev Canon Dr</option>
		</field>
		<field
				name="email"
				type="text"
				label="Email Address"
				description="Email Address of the member"
				size="40"
				class="inputbox required"
				validate="email"
				default=""
				/>
		<field
				name="member_type"
				type="sql"
				label="Member Type"
				description="The type of member"
				required="true"
				default=""
				query="SELECT id AS value, name AS member_type FROM #__md_member_type"
				/>
				
		<field
				name="insurance_group"
				type="list"
				label="Insurance Group"
				description="The insurance group for the member"
				default="">
				<option value="">Please Select</option>
				<option value="Under 16">Under 16</option>
				<option value="16-70">16-70</option>
				<option value="Over 70">Over 70</option>
		</field>
                <field
                                name="annual_report"
                                type="radio"
                                label="Annual Report?"
                                description="Does the member want to receive an annual report?"
                                class="btn-group btn-group-yesno"
                                default="0"
                                filter="integer">
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                </field>
		<field
				name="telephone"
				type="tel"
				label="Telephone Number"
				description="Telephone Number of the member"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="newsletters"
				type="list"
				label="Newsletters"
				description="How does the member want to receive newsletters?"
				required="true"
				default="">
					<option value="">Please Select</option>
					<option value="Email">Email</option>
					<option value="Postal">Postal</option>
					<option value="Both">Both Email and Postal</option>
					<option value="Neither">Neither</option>
		</field>
                <field
                                name="date_elected"
                                type="calendar"
                                label="Date Elected"
                                description="The date that the member was elected"
                                class="inputbox"
                                default="" 
				/>
                <field
                                name="address1"
                                type="text"
                                label="Address 1"
								size="100"
                                description="Address 1"
								class="inputbox"
                		/>
                <field
                                name="address2"
                                type="text"
                                label="Address 2"
								size="100"
                                description="Address 2"
								class="inputbox"
                		/>
                <field
                                name="address3"
                                type="text"
                                label="Address 3"
								size="100"
                                description="Address 3"
								class="inputbox"
                		/>
                <field
                                name="town"
                                type="text"
                                label="Town"
								size="50"
                                description="Town"
								class="inputbox"
                		/>
                <field
                                name="county"
                                type="text"
                                label="County"
								size="20"
                                description="County"
								class="inputbox"
                		/>
                <field
                                name="postcode"
                                type="text"
                                label="Postcode"
				size="9"
                                description="Postcode"
				class="inputbox"
                		/>
                <field
                                name="country"
                                type="text"
                                label="Country"
				size="2"
                                description="Country"
				class="inputbox"
                		/>
                <field
                                name="country"
                                type="text"
                                label="Country"
				size="2"
                                description="Country"
				class="inputbox"
                		/>
                <!-- <field
                                name="databaseform"
                                type="radio"
                                label="Databaseform?"
                                description="Has a 'Database form' been received for the member?  (redundant field)"
                                class="btn-group btn-group-yesno"
                                default="0"
                                filter="integer">
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                </field> -->
                <field
                                name="notes"
                                type="textarea"
                                label="Notes"
				size="200"
                                description="Notes"
				class="inputbox"
				cols="60"
				rows="3"
                		/>
                <!-- <field
                                name="crb"
                                type="radio"
                                label="CRB Checked?"
                                description="CRB Checked?"
                                class="btn-group btn-group-yesno"
                                default="0"
                                filter="integer">
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                </field>
                <field
                                name="sub_recd"
                                type="radio"
                                label="Subscription Received?"
                                description="Subscription Received?"
                                class="btn-group btn-group-yesno"
                                default="0"
                                filter="integer">
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                </field> -->
                <field
                                name="dbs_date"
                                type="calendar"
                                label="DBS Date"
                                description="The date that the member was awarded DBS certificate"
                                class="inputbox"
                                default="" 
				/>
                <field
                                name="dbs_update"
                                type="calendar"
                                label="DBS Update"
                                description="DBS Update"
                                class="inputbox"
                                default="" 
				/>
				<field
                                name="mod_user_id"
                                type="user"
                                label="Last Modified By"
                                description="The user who most last edited/saved this member record"
                                readonly="true"
				/>
				<field
                                name="mod_date"
                                type="calendar"
                                label="Last Modified Date"
                                description="The date that this member record was last edited/saved"
                                class="inputbox"
                                readonly="true"
				/>
	</fieldset>
</form>
