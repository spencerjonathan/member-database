				name="id"
				type="hidden"
				/>
		<field
				name="tower_id"
				type="number"
				label="Tower ID"
				/>
		<field
				name="name"
				type="text"
				label="Name"
				description="The name of the member"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="email"
				type="text"
				label="Email Address"
				description="Email Address of the member"
				size="40"
				class="inputbox"
				default=""
				/>
	</fieldset>
