<?xml version="1.0" encoding="utf-8"?>
<form>
		<fieldset name="main" addrulepath="components/com_memberdatabase/models/rules" addfieldpath="administrator/components/com_memberdatabase/models/fields">
		<field
        	name="accept_privicy_policy"
            type="hidden"
            default="0"
        />  
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="tower_id"
				type="towers"
				class="required"
				label="Tower ID"
				validate="towerid"
				message="Please select a valid tower for the memeber"
				required="true"
				/>
		<field
				name="forenames"
				type="text"
				label="Forenames"
				description="The forename(s) of the member"
				size="50"
				class="inputbox required"
				required="true"
				default=""
				/>
		<field
				name="surname"
				type="text"
				label="Surname"
				description="The Surname of the member"
				size="50"
				class="inputbox required"
				required="true"
				default=""
				/>
		<field
				name="title"
				type="list"
				label="Title"
				description="The Title of the member"
				required="true"
				default="">
				<option value="">Please Select</option>
				<option value="Dr">Dr</option>
				<option value="Father">Father</option>
				<option value="Master">Master</option>
				<option value="Miss">Miss</option>
				<option value="Mr">Mr</option>
				<option value="Mrs">Mrs</option>
				<option value="Ms">Ms</option>
				<option value="Prof">Prof</option>
				<option value="Rev">Rev</option>
				<option value="Rev Canon Dr">Rev Canon Dr</option>
		</field>
		<field
				name="member_type_id"
				type="sql"
				label="Member Type"
				description="The type of member"
				required="true"
				default=""
				query="SELECT id AS value, name AS member_type_id FROM #__md_member_type where enabled = 1"
				/>
		<field
				name="long_service"
				type="list"
				label="Long Service?"
				description="Has this person been a member of the association for over 50 years?"
				default="No">
				<option value="No">No</option>
				<option value="50 Years">50 Years</option>
				<option value="60 Years">60 Years</option>
				<option value="70 Years">70 Years</option>
		</field>
		<field
				name="insurance_group"
				type="list"
				label="Insurance Group"
				description="The insurance group for the member"
				default="">
				<option value="">Please Select</option>
				<option value="Under 16">Under 16</option>
				<option value="16-70">16-70</option>
				<option value="Over 70">Over 70</option>
		</field>
		<field
        	name="annual_report"
            type="radio"
            label="Handbook/Annual Report?"
            description="Does the member want to receive a handbook and annual report?"
            class="btn-group btn-group-yesno"
            default="0"
            filter="integer">
            	<option value="1">JYES</option>
            	<option value="0">JNO</option>
        </field>
		<field
			name="mod_user_id"
			type="text"
			label="Last Modified By"
			description="The user who most last edited/saved this member record"
			class="inputbox"
			readonly="true"
		/>
		<field
            name="mod_date"
            type="text"
            label="Last Modified Date"
            description="The date that this member record was last edited/saved"
            class="inputbox"
            readonly="true"
		/>
		<field
			name="newsletters"
			type="hidden"
			default=""
		/>
		<field
			name="email"
			type="hidden"
			default=""
		/>
	</fieldset>
</form>
