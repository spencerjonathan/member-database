<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		
		<field
				name="place"
				type="text"
				label="Place"
				description="The town, village or city of the tower"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="designation"
				type="text"
				label="Dedication"
				description="The church's dedication"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="district_id"
				type="sql"
				label="District"
				description="Which disctrict does the tower belong to"
				default=""
				readonly="true"
				query="SELECT id AS value, name AS district_id FROM #__md_district"
				/>
		<field
				name="bells"
				type="number"
				label="Number of Bells"
				description="The number of bells"
				size="2"
				class="inputbox"
				default=""
				/>
		<field
				name="tenor"
				type="text"
				label="Tenor Weight"
				description="The weight of the tenor"
				size="20"
				class="inputbox"
				default=""
				/>
		
		<field
				name="ground_floor"
				type="radio"
				label="Ground Floor Ring?"
				description="Is the ringing chamber on the ground floor?"
				class="btn-group btn-group-yesno"
				default="0"
				filter="integer">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
		</field>
		<field
				name="anti_clockwise"
				type="radio"
				label="Anti-Clockwise Ringing Circle?"
				description="Is the ringing circle anti-clockwise?"
				class="btn-group btn-group-yesno"
				default="0"
				filter="integer">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
		</field>
		<field
				name="unringable"
				type="radio"
				label="Unringable?"
				description="Are the bells currently unringable?"
				class="btn-group btn-group-yesno"
				default="0"
				filter="integer">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
		</field>
		<field
				name="email"
				type="text"
				label="Correspondance Email Address"
				description="Tower correspondance email address"
				size="100"
				class="inputbox"
				validate="email"
				default=""
				readonly="true"
				/>
		<field
				name="street"
				type="text"
				label="Address - Street"
				description="Street address and number"
				size="100"
				class="inputbox"
				default=""
				/>
		<field
				name="town"
				type="text"
				label="Address - Town"
				description="Town"
				size="50"
				class="inputbox"
				default=""
				/>
		<field
				name="county"
				type="text"
				label="Address - County"
				description="County"
				size="50"
				class="inputbox"
				default=""
				/>
		<field
				name="post_code"
				type="text"
				label="Address - Postcode"
				description="Postcode"
				size="10"
				class="inputbox"
				default=""
				/>
		<field
				name="country"
				type="text"
				label="Address - Country"
				description="Country"
				size="2"
				class="inputbox"
				default=""
				/>
		<field
				name="grid_ref"
				type="text"
				label="Location - O/S Grid Ref"
				description="O/S Grid Reference"
				size="8"
				class="inputbox"
				readonly="true"
				default=""
				/>
		<field
				name="longitude"
				type="number"
				label="Location - Longitude"
				description="Degrees Longitude"
				size="35"
				class="inputbox"
				default=""
				validate="number"
				readonly="true"
				/>
		<field
				name="latitude"
				type="number"
				label="Location - Latitude"
				description="Degrees Latitude"
				size="35"
				class="inputbox"
				default=""
				validate="number"
				readonly="true"
				/>
		<field
				name="website"
				type="text"
				label="Tower Website"
				description="Tower Website"
				size="200"
				class="textarea"
				default=""
				/>
		<field
				name="church_website"
				type="text"
				label="Church Website"
				description="Church Website"
				size="200"
				class="textarea"
				default=""
				/>
		<field
				name="doves_guide"
				type="text"
				label="Doves Entry"
				description="Tower Website"
				size="200"
				class="textarea"
				default=""
				/>
<!-- 		<field
				name="contact_person"
				type="text"
				label="Contact Person"
				description="Contact Person"
				size="25"
				class="inputbox"
				default=""
				/> -->
<!-- 		<field
				name="email2"
				type="hidden"
				label="Email 2"
				description="Email 2"
				size="4"
				class="inputbox"
				default=""
				/> -->
		<field
				name="tower_description"
				type="text"
				label="Tower Description"
				description="Tower Description"
				size="200"
				class="inputbox"
				default=""
				/>
		<field
				name="wc"
				type="radio"
				label="WC?"
				description="Does the church have a toilet?"
				class="btn-group btn-group-yesno"
				default="0"
				filter="integer">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
		</field>
		<field
				name="sunday_ringing"
				type="text"
				label="Sunday Ringing Times"
				description="Sunday ringing times"
				size="100"
				class="inputbox"
				default=""
				/>
		<field
				name="active"
				type="hidden"
				label="Active?"
				description="Is this record active?"
				class="btn-group btn-group-yesno"
				default="0"
				readonly="true"
				filter="integer">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
		</field>
		<field
				name="web_tower_id"
				type="hidden"
				label="Web Tower ID"
				description="Web Tower ID"
				size="3"
				class="inputbox"
				default=""
				readonly="true"
				validate="number"
				/>
		<field
				name="practice_night"
				type="text"
				label="Practice Night"
				description="Practice Night"
				size="17"
				class="inputbox"
				default=""
				/>
		<field
				name="practice_details"
				type="text"
				label="Practice Details"
				description="Practice details"
				size="200"
				class="inputbox"
				default=""
				/>
		<field
				name="captain_id"
				type="sql"
				class="required"
				label="Tower Captain"
				description="Tower Captain"
				message="Please select a Tower Captain"
				required="true"
				query="SELECT 0 as value, '--Please Select--' as captain_id union SELECT id AS value, concat(forenames, ' ', surname) AS captain_id FROM #__md_member order by captain_id asc"
				/>
		<field
				name="incl_capt"
				type="radio"
				label="Publish Captain's Contact Details?"
				description="Publish the Captain's name and phone number on the website and in the Association Handbook?"
				class="btn-group btn-group-yesno"
				default="0"
				filter="integer">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
		</field>
		<field
				name="correspondent_id"
				type="sql"
				class="required"
				label="Tower Correspondent"
				description="Tower Correspondent"
				message="Please select a Tower Correspondent"
				required="true"
				query="SELECT 0 as value, '--Please Select--' as correspondent_id union SELECT id AS value, concat(forenames, ' ', surname) AS correspondent_id FROM #__md_member order by correspondent_id asc"
				/>
		<field
				name="incl_corresp"
				type="radio"
				label="Publish Correspondent's Contact Details?"
				description="Publish the Tower Correspondent's name and phone number on the website and in the Association Handbook?"
				class="btn-group btn-group-yesno"
				default="0"
				filter="integer">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
		</field>
		
		
		<field
				name="mod_user_id"
				type="user"
				label="Last Modified By"
				description="The user who most last edited/saved this tower record"
				readonly="true"
				/>
		<field
				name="mod_date"
				type="text"
				label="Last Modified Date"
				description="The date that this tower record was last edited/saved"
				class="inputbox"
				readonly="true"
				/>
	</fieldset>
</form>
